<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <title>URCA</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    
        <nav class="navbar navbar-expand-lg w-100 m-auto navbar-dark bg-primary ">
            <a class="navbar-brand" href="{{path('urca')}}">URCA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarColor01">
                <ul class="navbar-nav mr-auto     ">
                <li class="nav-item ">
                    <a class="nav-link" href="{{path('urca')}}">Accueil</a>
                </li>
                

                <!-- Option Menu etudiant-->
                
                
                <li class="nav-item ">
                    <a class="nav-link" href="{{path('etudiant_informationsPerso')}}">Informations Personnelles</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">Bulletin</a>
                </li>
                <!-- Option Fin Menu etudiant-->
                



                <!-- Option Menu enseignant-->
                
                <li class="nav-item ">
                    <a class="nav-link" href="{{path('etudiant_liste')}}">Listes Etudiants</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{path('enseignant_ajouterProjet')}}">Projet</a>
                </li>
                <!-- Option Fin Menu enseigant-->
               

                <!-- Option Menu entreprise-->
                
                <li class="nav-item ">
                    <a class="nav-link" href="#">Stage</a>
                </li>

                
                <!-- Option Fin Menu entreprise-->
                

                <!-- Option menu Admin-->
                



                </ul>
                <!-- Option Connexion /Deconnexion-->
                {% if not app.user %}
                <ul class="navbar-nav">
                <li class="nav-item ">
                    <a class="nav-link bg-success rounded" href="{{path("app_login")}}">Connexion</a>
                </li>
                {% else %}
                <li class="nav-item ">
                    <a class="nav-link bg-danger rounded" href="{{path("app_logout")}}">Deconnexion</a>
                </li>
                {% endif %}
                </ul>
                
            </div>
        </nav>
 

        <h1 class="text-center">{% block titrePage %}{% endblock %}</h1>
        <hr>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
